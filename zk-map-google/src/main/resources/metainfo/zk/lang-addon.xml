<?xml version="1.0" encoding="UTF-8"?>
<language-addon>
    <addon-name>zkmap-google</addon-name>
    <language-name>xul/html</language-name>
    <depends>zul</depends>
    <depends>zkmap-core</depends>
    
    <version>
        <version-class>com.zkoss.component.map.google.Version</version-class>
        <version-uid>1.0.0</version-uid>
    </version>
    
    <component>
        <component-name>gmmap</component-name>
        <component-class>com.zkoss.component.map.google.GMMapComponent</component-class>
        <widget-class>zkoss.component.map.google.GMMap</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/gmmap.js</mold-uri>
        </mold>
        <stylesheet>css/gmmap.css</stylesheet>
        
        <!-- Eventos -->
        <custom-attribute>
            <attribute-name>onMapClick</attribute-name>
            <property-name>onMapClick</property-name>
            <attribute-type>event</attribute-type>
        </custom-attribute>
        <custom-attribute>
            <attribute-name>onMarkerClick</attribute-name>
            <property-name>onMarkerClick</property-name>
            <attribute-type>event</attribute-type>
        </custom-attribute>
    </component>
</language-addon>
